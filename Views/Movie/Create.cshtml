@model Movie

@{
    ViewData["Title"] = "Add a movie";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>

    <form class="card" asp-action="Create" asp-controller="Movie" method="post">

        <label for="body">Title</label>
        <input asp-for="Title" type="text" class="form-control" required placeholder="Insert a title here">

        <label for="body">Author</label>
        <input asp-for="Author" type="text" class="form-control" required placeholder="Insert an author here">

        <label for="body">Producer</label>
        <input asp-for="Producer" type="text" class="form-control" required placeholder="Insert a producer here">

        <label for="body">Genre</label>
        <input asp-for="Genre" type="text" class="form-control" required placeholder="Insert a genre here">

        <div> Duration is 1h 30m for now</div>
        <input asp-for="@Model.Duration" type="hidden" value="01:30:00" />

        <button type="Submit" class="btn btn-sm btn-outline-primary">Create movie</button>
    </form>
</div>