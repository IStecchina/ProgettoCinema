@model TicketCreationModel

@{
    ViewData["Title"] = "Add a ticket";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>

    <form class="card" asp-action="Create" asp-controller="Ticket" method="post">

        <label>Select the room</label>
        @Html.DropDownListFor(x => x.Ticket.RoomId, Model.Rooms, null, new { required = "required", @class = "form-control text-center myInput" })

        <label>Select the customer</label>
        @Html.DropDownListFor(x => x.Ticket.CustomerId, Model.Customers, null, new { required = "required", @class = "form-control text-center myInput" })

        <label for="body">Price</label>
        <input asp-for="Ticket.Price" type="number" class="form-control" required value="100">

        <input asp-for="Ticket.Position" type="hidden" class="form-control" value="0">

        <button type="Submit" class="btn btn-sm btn-outline-primary">Create a new ticket</button>
    </form>
</div>