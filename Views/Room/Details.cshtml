@model CinemaRoom

@{
    ViewData["Title"] = "Cinema details";
}

<div class="text-center align-items-center">


    <h1 class="display-4">@ViewData["Title"]</h1>
    <h5 class="card-title">Id: @Model.ID</h5>
    <h5 class="card-title">Revenue: @Model.GetRevenue()</h5>
    <h5 class="card-title">Total seats: @Model.Seats</h5>
    <h5 class="card-title">Occupied seats: @Model.OccupiedSeats.Count</h5>
    <h5 class="card-title">Movie: @Model.Movie.Title</h5>

    @Html.ActionLink("Empty room", "EmptyRoom", new { id = Model.ID }, new { @class = "btn btn-sm btn-outline-danger w-25" })

</div>
